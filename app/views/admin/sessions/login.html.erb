
<div class="row mt-3">
        <div class="col-md-4 offset-md-4">
                <% if notice.present? %>
                <div class="alert alert-primary alert-dismissible fade show" role="alert">
                    <%= notice %>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <%end%>
<div class="card mt-3">
        <div class="card-body">
            
<%= image_tag  "logo.png" , class: "mt-3 mb-3"%>
 
    
    <%= form_tag admin_entrar_path do %>

    <div class="form-group">
        <%= email_field_tag :email , nil, placeholder: "Email", class: "form-control"%>
    </div>
    <div class="form-group">
        <%= password_field_tag :password, nil, placeholder: "Senha", class: "form-control" %>
    </div>
    <div class="form-group">
        <%= submit_tag 'Entrar', class: "btn btn-primary btn-block"%>
    </div>
    
    <%end%>

    <button class="btn btn-secondary btn-block" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
        Esqueci minha senha!
    </button>
    <div class="collapse mt-3" id="collapseExample">
    <h5>Digite seu email</h5>
    <%= form_tag admin_recuperar_path do %>

    <div class="form-group">
        <% label_tag :email %>
        <%= text_field_tag :email, nil, class: "form-control" %>
    </div>
    <%= submit_tag 'Recuperar', class: "btn btn-primary btn-block" %>

    <%end%>
    </div>
</div>
</div>
        </div>
        </div>
