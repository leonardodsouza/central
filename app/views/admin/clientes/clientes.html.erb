<nav aria-label="breadcrumb" role="navigation">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><%= link_to  "Dashboard", admin_dashboard_path %></li>
        <li class="breadcrumb-item active" aria-current="page">Dicas</li>
    </ol>
</nav>
<div class="row mb-3">
    <div class="col-12">
        <%= link_to admin_novo_cliente_path, class: "btn btn-primary float-right" do %>
        <i class="fa fa-check" aria-hidden="true"></i>
        Novo
        <%end%> 
    </div>
</div>
<table class="table table-bordered table-responsive-sm">
    <thead class="thead-light">
        <tr>
        <th  style="width: 5%;" scope="col">Cod.</th>
        <th  scope="col">Nome</th>
        <th  style="width: 5%;" colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @clientes.each do |cliente| %>
        <tr>
            <td><%= cliente.id %></td>
            <td><%= cliente.nome %> <br> <small class="text-muted"><%= cliente.created_at.strftime("%d/%m/%Y") %></small></td>
            <td>
                <%= link_to admin_cliente_path(cliente), class: "btn btn-secondary" do %>
                    <i class="fa fa-eye" aria-hidden="true"></i>
                <%end%>
            </td>
            <td>
                <%= link_to admin_editar_cliente_path(cliente), class: "btn btn-primary" do %>
                    <i class="fa fa-edit" aria-hidden="true"></i>
                <%end%>
            </td>
            <td>
                <%= link_to admin_cliente_path(cliente), method: :delete, data: { confirm: 'Deseja apagar esse registro?' }, class: "btn btn-danger" do %>
                    <i class="fa fa-times" aria-hidden="true"></i>
                <%end%>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
<%= will_paginate @clientes, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>