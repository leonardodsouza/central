<nav aria-label="breadcrumb" role="navigation">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><%= link_to  "Dashboard", admin_dashboard_path %></li>
        <li class="breadcrumb-item active" aria-current="page">Artigos</li>
    </ol>
</nav>
<div class="row mb-3">
<div class="col-12">
    <%= link_to admin_novo_artigo_path, class: "btn btn-primary float-right" do %>
    <i class="fa fa-check" aria-hidden="true"></i>
    Novo
    <%end%>
</div>
</div>
<table class="table table-bordered table-responsive-sm">
    <thead class="thead-light">
        <tr>
        <th  style="width: 5%;" scope="col">Cod.</th>
        <th  scope="col">TÃ­tulo</th>
        <th  style="width: 5%;" colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @artigos.each do |artigo| %>
        <tr>
            <td><%= artigo.id %></td>
            <td><%= artigo.titulo %> <br> <small class="text-muted"><%= artigo.created_at.strftime("%d/%m/%Y") %></small></td>
            <td>
                <%= link_to admin_artigo_path(artigo), class: "btn btn-secondary" do %>
                    <i class="fa fa-eye" aria-hidden="true"></i>
                <%end%>
            </td>
            <td>
                <%= link_to admin_editar_artigo_path(artigo), class: "btn btn-primary" do %>
                    <i class="fa fa-edit" aria-hidden="true"></i>
                <%end%>
            </td>
            <td>
                <%= link_to admin_artigo_path(artigo), method: :delete, data: { confirm: 'Deseja apagar esse registro?' }, class: "btn btn-danger" do %>
                    <i class="fa fa-times" aria-hidden="true"></i>
                <%end%>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
<%= will_paginate @artigos, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>