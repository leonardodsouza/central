<nav aria-label="breadcrumb" role="navigation">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><%= link_to  "Dashboard", admin_dashboard_path %></li>
        <li class="breadcrumb-item"><%= link_to  "Notícias", admin_artigos_path %></li>
        <li class="breadcrumb-item active" aria-current="page">Editar</li>
    </ol>
</nav>
<%= form_with(model: @artigo, local: true, url:{action: "atualizar", controller: "artigos", id: @artigo.id}) do |form| %>

<% if @artigo.errors.any? %>
<div class="alert alert-danger alert-dismissible fade show" role="alert">
    <strong class="alert-heading">ERRO AO TENTAR SALVAR O ARTIGO.</strong>
    <hr>
    <% @artigo.errors.full_messages.each do |message| %>
        <%= message %><br>
    <% end %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<% end %>

      <div class="form-group">
        <div class="row">
          <div class="col-md-2">
            <%= image_tag @artigo.foto.url(:thumb), class: "img-thumbnail" %>
          </div>
          <div class="col-md-10">
            <%= form.file_field :foto, id: :admin_artigo_foto, class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <%= form.label :titulo %>
        <%= form.text_field :titulo, id: :admin_artigo_titulo, class: "form-control", placeholder: "titulo do veículo"%>
        <small id="titulo" class="form-text text-muted">Título do artigo</small>
      </div>
      <div class="form-group">
          <%= form.label :resumo %>
          <%= form.text_area :resumo, id: :admin_artigo_resumo, class: "form-control", placeholder: "Resumo do artigo"%>
          <small id="titulo" class="form-text text-muted">Faça um beve resumo de até 3 linhas</small>
        </div>
      <div class="form-group">
        <%= form.label :texto %>
        <%= form.cktext_area :texto, id: :admin_artigo_texto, class: "form-control", placeholder: "Descrição do veículo" %>
      </div>

      <div class="form-group">
        <%= form.submit class: "btn btn-primary" %>
        <%= link_to  "Cancelar", admin_artigos_path, class: "btn btn-secondary"  %>
      </div>

<% end %>