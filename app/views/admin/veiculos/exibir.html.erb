<nav aria-label="breadcrumb" role="navigation">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><%= link_to  "Dashboard", admin_dashboard_path %></li>
        <li class="breadcrumb-item"><%= link_to  "Veículos", admin_veiculos_path %></li>
        <li class="breadcrumb-item active" aria-current="page">Exibir</li>
    </ol>
</nav>
<div class="card mb-3">
    <div class="card-body">
        <div class="social-likes social-likes_vertical float-right" data-counters="no" data-url="www.humanizerh.com.br" data-title="Veículo">
            <button type="button" class="facebook btn btn-primary"> <i class="fa fa-share-alt" aria-hidden="true"></i> Compartilhar</button>
        </div>
        <h4 class="card-title"><%= @veiculo.modelo %></h4>
        <h6 class="card-subtitle mb-2 text-muted"><%= @veiculo.tipo %></h6>
        <hr>
        <div class="gallery">  
            <div class="row"> 
                <div class="col-md-6 mb-3">
                    <%= image_tag @veiculo.foto.url(:capa), class: "img-fluid" %>
                </div>
                <div class="col-md-6 mb-3">
                    <div id="lightgallery"> 
                        <% @veiculo.galerias.each do |galeria| %>
                            <div class="thumb-gallery float-left" data-responsive="<%= galeria.foto.url(:grande) %>" data-src="<%= galeria.foto.url(:grande) %>" >
                                <%= link_to (image_tag galeria.foto.url(:thumb)), nil,  class: "img-fluid"%>
                            </div>
                        <%end%>
                    </div>
                </div>
            </div>
        </div>
        <div class="row"> 
            <div class="col-md-12">
                <span class="form-text text-muted"><%= @veiculo.marca%> <%= @veiculo.modelo%> <%= @veiculo.tipo %></span>
                <h4 class="card-title">R$ <%= @veiculo.preco %></h4>
                <%= raw(@veiculo.descricao) %>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function(){
        $('#lightgallery').lightGallery();
    });
</script>