<div class="title col-md-12 bg-secondary">
    <div class="row text-center text-white">
        <div class="col-md-12">
            <h3 class="text-uppercase">Conheça nosso catálogo</h3>
            <hr class="divider"></hr>
        </div>
    </div> 
</div>
<div class="bg-light pb-3 pt-3">
    <div class="container">
        <div class="row">
        <% @veiculos.each do |veiculo| %>
            <div class="col-12 col-md-3 col-sm-4 mb-3">
                <div class="card bg-light">
                    <%= link_to site_veiculo_path(veiculo) do %>
                        <%= image_tag veiculo.foto.url(:medium), class:"card-img-top" %>
                    <%end%>    
                    <div class="card-body">
                        <h4 class="card-title">R$ <%= veiculo.preco %></h4>
                        <h6 class="card-subtitle mb-2 text-muted"><%= veiculo.tipo %></h6>
                        <%= link_to  "Descrição", site_veiculo_path(veiculo), class: "btn btn-secondary btn-block" %>
                    </div>
                </div>
            </div>
            <%end%>
        </div>
        <%= will_paginate @veiculos, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
    </div> 
    
</div>