<%= form_tag(site_enviar_contato_path) do %>

     <div class="form-group">
       <%= label_tag :nome %>
       <%= text_field_tag :nome, nil, class: "form-control", placeholder: "Digite seu nome", required: true%>
     </div>

     <div class="form-group">
        <%= label_tag :email %>
        <%= email_field_tag :email, nil, class: "form-control", placeholder: "Digite seu email" , required: true%>
     </div>

     <div class="form-group">
       <%= label_tag :telefone %>
       <%= text_field_tag :telefone, nil, class: "form-control", placeholder: "Digite seu telefone" , required: true%>
    </div>

     <div class="form-group">
       <%= label_tag :mensagem %>
       <%= text_area_tag :mensagem, nil, rows: "6", class: "form-control", placeholder: "Escreva sua mensagem" , required: true%>
     </div>


     <div class="form-group">
       <%= submit_tag "Enviar", class: "btn btn-primary" %>
     </div>

<% end %>