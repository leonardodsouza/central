<div id="carousel" class="carousel slide" data-ride="carousel">

    <!-- Indicadores -->

    <ol class="carousel-indicators">
        <li data-target="#carousel" data-slide-to="0" class="active"></li>
        <li data-target="#carousel" data-slide-to="1"></li>
        <li data-target="#carousel" data-slide-to="2"></li>
    </ol>
    
    <!-- Imágens -->

    <div class="carousel-inner">
        <div class="carousel-item active">
            <%= image_tag @banner_01.foto.url(:grande), class: "d-block w-100" %>
            <div class="carousel-caption d-none d-md-block">
                <h1><%= @banner_01.titulo %></h1>
                <p><%= @banner_01.legenda %></p>
            </div>
        </div>
        <div class="carousel-item">
            <%= image_tag @banner_02.foto.url(:grande), class: "d-block w-100" %>
            <div class="carousel-caption d-none d-md-block">
                <h1><%= @banner_02.titulo %></h1>
                <p><%= @banner_02.legenda %></p>
            </div>
        </div>
        <div class="carousel-item">
            <%= image_tag @banner_03.foto.url(:grande), class: "d-block w-100" %>
            <div class="carousel-caption d-none d-md-block">
                <h1><%= @banner_03.titulo %></h1>
                <p><%= @banner_03.legenda %></p>
            </div>
        </div>
    </div>
    
    <!-- controle -->

    <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

